<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewInstrumentActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <ImageView
        android:id="@+id/img_qr"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:src="@drawable/image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/toolbar"/>

    <TextView
        android:id="@+id/i_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="20sp"
        android:layout_below="@+id/img_qr"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:textStyle="italic"
        android:inputType = "textCapSentences"/>

    <TextView
        android:id="@+id/i_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code"
        android:textSize="30sp"
        android:layout_below="@+id/i_cat"
        android:textColor="#a8edea"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:inputType = "textCapSentences"/>

    <TextView
        android:id="@+id/i_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/i_code"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:inputType="textCapSentences"
        android:text="Location"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/i_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/i_location"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:inputType="textCapSentences"
        android:text="Status"
        android:textSize="20sp" />
    <ScrollView
        android:layout_below="@id/i_status"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/i_assign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:text="Assigned Status"/>

            <TextView
                android:id="@+id/i_notes"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/i_status"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp"
                android:inputType="textCapSentences"
                android:text="Instrument Notes"
                android:textSize="17sp"
                />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="15dp">

            <ImageButton
                android:id="@+id/generatebtn"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:background="@drawable/gradient_bg"
                android:src="@drawable/baseline_share_24" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/assignbtn"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:strokeColor="@color/yellow"
                app:strokeWidth="3dp"
                android:text="Assign"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/receivebtn"
                android:layout_width="wrap_content"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/blue"
                app:strokeWidth="3dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Return"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <Button
                android:id="@+id/editbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/teal_700"
                app:strokeWidth="3dp"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/deletebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/purple_700"
                app:strokeWidth="3dp"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>