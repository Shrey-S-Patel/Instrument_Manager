<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/child_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:elevation="8dp"
    app:cardBackgroundColor="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btn_stat"
            android:layout_width="5dp"
            android:layout_height="130dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/green1"
            android:elevation="35dp"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/img_student"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/btn_stat"
            android:src="@drawable/musician" />

        <TextView
            android:id="@+id/s_code"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_student"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="Student Code"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/s_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Name"
            android:textColor="@color/black"
            android:layout_below="@+id/s_code"
            android:layout_toRightOf="@+id/img_student"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/s_location"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="15sp"
            android:textStyle="italic"
            android:text="Location"
            android:textColor="@color/black"
            android:layout_below="@+id/s_name"
            android:layout_toRightOf="@+id/img_student"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/s_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="15sp"
            android:text="Status"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@+id/s_code"
            android:layout_toRightOf="@+id/s_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/viewbtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s_location"
            android:layout_toRightOf="@+id/img_student"
            android:backgroundTint="@color/teal_700"
            android:elevation="18dp"
            android:layout_marginTop="5dp"
            android:text="View"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/deletebtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s_location"
            android:layout_toRightOf="@+id/viewbtn"
            android:backgroundTint="@color/black"
            android:elevation="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
