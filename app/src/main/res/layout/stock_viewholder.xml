<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/child_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:elevation="8dp"
    app:cardBackgroundColor="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/img_qr"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:src="@drawable/saxophone" />

        <TextView
            android:id="@+id/i_code"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_qr"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="Instrument Code"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            android:textSize="17sp" />


        <Button
            android:id="@+id/btn_stat"
            android:elevation="35dp"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/i_code"
            android:backgroundTint="@color/green1"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/i_cat"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="14sp"
            android:text="Category"
            android:textColor="@color/black"
            android:layout_below="@+id/i_code"
            android:layout_toRightOf="@+id/img_qr"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/i_loc"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="italic"
            android:text="Location"
            android:textColor="@color/black"
            android:layout_below="@+id/i_code"
            android:layout_toRightOf="@+id/i_cat"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/checkbtn"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/i_cat"
            android:layout_alignStart="@+id/i_cat"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/img_qr"
            android:backgroundTint="@color/lavender"
            android:elevation="18dp"
            android:gravity="center"
            android:text="Check"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/img_tick"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="2dp"
            android:layout_below="@+id/i_cat"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/checkbtn"
            android:src="@drawable/cancel"
            />


    </RelativeLayout>
</androidx.cardview.widget.CardView>